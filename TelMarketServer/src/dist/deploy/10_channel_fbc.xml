<channel-adaptor name='fbc-channel' class="org.jpos.q2.iso.ChannelAdaptor"
		logger="Q2">
	<channel class="org.jpos.iso.channel.XMLChannel"
		packager="org.jpos.iso.packager.XML2003Packager">
	<property name="host" value="localhost" />
	<property name="port" value="7112" />
        <property name="timeout" value="30000" />
        <property name="socketFactory" value="org.jpos.iso.GenericSSLSocketFactory" />
        <filter class='org.jpos.iso.filter.ChannelInfoFilter' direction='both'>
<property name='channel-name' value='1000' />
<property name='socket-info' value='1001' />
</filter>
	</channel>
<in>fbc-send</in>
<out>fbc-receive</out>
<reconnect-delay>10000</reconnect-delay>
</channel-adaptor>
